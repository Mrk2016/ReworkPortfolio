<footer class="text-center py-8 text-gray-500 border-t border-white/10 mt-20">
  <div class="max-w-6xl mx-auto px-[5%]">
    <!-- Copyright centrado con botón en la misma fila -->
    <div class="relative flex items-center justify-center">
      <!-- Copyright centrado -->
      <p class="text-base text-gray-500 text-center">
        &copy; {new Date().getFullYear()} &#60;Mrk/&#62;. Hecho con ❤️ y mucho Astro
        🚀
      </p>

      <!-- Botón volver arriba en la derecha -->
      <a
        href="#home"
        class="group absolute right-0 flex items-center gap-2 bg-gray-800/30 hover:bg-green-500/20 text-gray-400 hover:text-green-400 px-4 py-2 rounded-full transition-all duration-300 no-underline border border-white/10 hover:border-green-500/30"
        id="back-to-top"
      >
        <svg
          class="w-4 h-4 transform group-hover:-translate-y-0.5 transition-transform duration-300"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
        </svg>
        <span class="text-sm font-medium hidden sm:inline">Volver Arriba</span>
        <span class="text-sm font-medium sm:hidden">Volver Arriba</span>
      </a>
    </div>
  </div>
</footer>

<script>
  // Smooth scroll para el botón de volver arriba
  document.addEventListener("DOMContentLoaded", () => {
    const backToTopBtn = document.getElementById("back-to-top");

    if (backToTopBtn) {
      backToTopBtn.addEventListener("click", (e) => {
        e.preventDefault();

        // Scroll suave hacia arriba
        window.scrollTo({
          top: 0,
          behavior: "smooth",
        });
      });
    }

    // Mostrar/ocultar botón basado en scroll (opcional)
    window.addEventListener("scroll", () => {
      if (backToTopBtn) {
        const scrollY = window.scrollY;
        const shouldShow = scrollY > 500; // Mostrar después de 500px de scroll

        backToTopBtn.style.opacity = shouldShow ? "1" : "0.7";
        backToTopBtn.style.transform = shouldShow
          ? "translateY(0)"
          : "translateY(5px)";
      }
    });
  });
</script>

<style>
  /* Modo claro */
  html.light footer {
    border-top: 1px solid rgba(148, 163, 184, 0.3);
  }

  html.light footer .text-gray-500 {
    color: #6b7280 !important;
  }

  html.light footer .bg-gray-800\/30 {
    background: rgba(255, 255, 255, 0.8) !important;
    border-color: rgba(148, 163, 184, 0.2) !important;
  }

  html.light footer .text-gray-400 {
    color: #9ca3af !important;
  }

  html.light footer .hover\:bg-green-500\/20:hover {
    background: rgba(34, 197, 94, 0.1) !important;
  }

  html.light footer .hover\:text-green-400:hover {
    color: #22c55e !important;
  }

  html.light footer .hover\:border-green-500\/30:hover {
    border-color: rgba(34, 197, 94, 0.3) !important;
  }

  /* Animación del botón */
  #back-to-top {
    transition: all 0.3s ease;
  }

  #back-to-top:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(34, 197, 94, 0.2);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    footer .relative {
      flex-direction: column;
      gap: 1rem;
    }

    footer .absolute {
      position: relative !important;
      right: auto !important;
    }
  }
</style>
