            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
          ></path>
        </svg>
        Ver Proyectos
      </a>
      <a
        href="#contact"
        class="btn-hover px-8 py-4 bg-transparent text-green-500 border-2 border-green-500/30 hover:border-green-500 rounded-lg font-semibold no-underline inline-flex items-center gap-2 hover:bg-green-500/5"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.13 8.13 0 01-2.939-.515l-5.637 1.406c-.365.092-.657-.215-.565-.565l1.406-5.637A8.13 8.13 0 013 12c0-4.418 3.582-8 8-8s8 3.582 8 8z"
          ></path>
        </svg>
        Conversemos
      </a>
    </div>
  </div>

  <!-- Code Display -->
  <div
    class="flex-1 max-w-lg glass rounded-2xl p-8 font-mono text-sm ml-8 relative overflow-hidden"
  >
    <!-- Code Header -->
    <div class="flex items-center justify-between mb-6">
      <div class="flex gap-2">
        <div class="w-3 h-3 rounded-full bg-red-500"></div>
        <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
        <div class="w-3 h-3 rounded-full bg-green-500"></div>
      </div>
      <div class="text-xs text-gray-400">developer.js</div>
    </div>

    <!-- Code Content con animación en loop -->
    <div class="text-white leading-relaxed space-y-2" id="code-container">
      <div class="code-line">
        <span class="text-purple-400">const</span>
        <span class="text-green-400 ml-2">developer</span>
        <span class="text-white ml-2">=</span>
        <span class="text-yellow-300 ml-2">{} </span>
        <div class="code-line pl-4">
          <span class="text-blue-300">name:</span>
          <span class="text-orange-300 ml-2">'Marcos Rubi Guevara'</span><span
            class="text-white">,</span
          >
        </div>
        <div class="code-line pl-4">
          <span class="text-blue-300">role:</span>
          <span class="text-orange-300 ml-2">'Fullstack Web Developer'</span
          ><span class="text-white">,</span>
        </div>
        <div class="code-line pl-4">
          <span class="text-blue-300">skills:</span>
          <span class="text-white ml-2">[</span>
        </div>
        <div class="code-line pl-8">
          <span class="text-orange-300">'React'</span><span class="text-white"
            >,</span
          >
          <span class="text-orange-300 ml-2">'Node.js'</span><span
            class="text-white">,</span
          >
        </div>
        <div class="code-line pl-8">
          <span class="text-orange-300">'TypeScript'</span><span
            class="text-white">,</span
          >
          <span class="text-orange-300 ml-2">'PHP'</span>
        </div>
        <div class="code-line pl-8">
          <span class="text-orange-300">'Astro'</span><span class="text-white"
            >,</span
          >
          <span class="text-orange-300 ml-2">'tailwindcss'</span>
        </div>
        <div class="code-line pl-4">
          <span class="text-white">],</span>
        </div>
        <div class="code-line pl-4">
          <span class="text-blue-300">passion:</span>
          <span class="text-orange-300 ml-2">'Building amazing products'</span
          ><span class="text-white">,</span>
        </div>
        <div class="code-line pl-4">
          <span class="text-blue-300">coffee:</span>
          <span class="text-green-400 ml-2">true</span>
        </div>
        <div class="code-line">
          <span class="text-yellow-300"></span>;
        </div>
      </div>

      <!-- Cursor parpadeante -->
      <div
        class="inline-block w-2 h-5 bg-green-500 animate-pulse ml-1"
        id="cursor"
      >
      </div>
    </div>

    <!-- Decoración de código -->
    <div class="absolute top-4 right-4 text-xs text-gray-500">
      <div class="flex items-center gap-2">
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        Live coding...
      </div>
    </div>
  </div>

  <!-- Scroll Indicator - Ajustado para móvil -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 flex flex-col items-center animate-bounce md:bottom-8"
    id="scroll-indicator-container"
  >
    <div class="text-sm text-gray-400 mb-2 font-medium hidden md:block">
      Descubre más
    </div>
    <div
      class="w-6 h-10 border-2 border-green-500/30 rounded-full flex justify-center relative cursor-pointer hover:border-green-500/60 transition-colors duration-300"
      id="scroll-indicator"
    >
      <div class="w-1 h-3 bg-green-500 rounded-full mt-2 animate-pulse"></div>
    </div>
    <svg
      class="w-6 h-6 text-green-500 mt-2 animate-bounce hidden md:block"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<script>
  // Animación de escritura en loop para el código
  const codeLines = document.querySelectorAll<HTMLElement>(".code-line");
  const cursor = document.getElementById("cursor") as HTMLElement;

  function typeWriterLoop() {
    // Ocultar todas las líneas
    codeLines.forEach((line) => {
      if (line instanceof HTMLElement) {
        line.style.opacity = "0";
        line.style.transform = "translateX(-10px)";
      }
    });

    // Mostrar cursor al inicio
    if (cursor) {
      cursor.style.opacity = "1";
    }

    // Animar cada línea con delay
    codeLines.forEach((line, index) => {
      setTimeout(() => {
        if (line instanceof HTMLElement) {
          line.style.transition = "all 0.3s ease";
          line.style.opacity = "1";
          line.style.transform = "translateX(0)";

          // Mover cursor a la línea actual
          if (cursor && index === codeLines.length - 1) {
            setTimeout(() => {
              cursor.style.opacity = "0";
            }, 500);
          }
        }
      }, index * 300);
    });

    // Reiniciar el loop después de completar
    setTimeout(
      () => {
        typeWriterLoop();
      },
      codeLines.length * 300 + 3000
    ); // 3 segundos de pausa
  }

  // Iniciar animación cuando el componente se carga
  document.addEventListener("DOMContentLoaded", () => {
    setTimeout(typeWriterLoop, 1000);

    // Funcionalidad del scroll indicator
    const scrollIndicator = document.getElementById("scroll-indicator");
    const scrollContainer = document.getElementById(
      "scroll-indicator-container"
    );

    if (scrollIndicator) {
      scrollIndicator.addEventListener("click", () => {
        const skillsSection = document.getElementById("skills");
        if (skillsSection) {
          skillsSection.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        }
      });
    }

    // Ocultar scroll indicator cuando el usuario hace scroll
    window.addEventListener("scroll", () => {
      if (scrollContainer) {
        const shouldHide = window.scrollY > 100;
        scrollContainer.style.opacity = shouldHide ? "0" : "1";
        scrollContainer.style.transform = `translateX(-50%) translateY(${shouldHide ? "20px" : "0"})`;
        scrollContainer.style.transition = "all 0.3s ease";
      }
    });
  });
</script>

<!-- Responsive adjustments -->
<style>
  /* Modo claro */
  html.light .text-white {
    color: #1f2937 !important;
  }

  html.light .text-gray-400 {
    color: #6b7280 !important;
  }

  html.light .glass {
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  /* Scroll indicator animations */
  @keyframes scrollBounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  #scroll-indicator {
    animation: scrollBounce 2s infinite;
  }

  #scroll-indicator:hover {
    animation-play-state: paused;
  }

  /* Animaciones mejoradas */
  .code-line {
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  /* Efectos hover mejorados */
  .btn-hover:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(22, 163, 74, 0.4);
  }

  /* Ajustes específicos para móvil */
  @media (max-width: 768px) {
    section {
      flex-direction: column;
      text-align: center;
      gap: 3rem;
      padding-top: 2rem;
      padding-bottom: 6rem; /* Aumentado para dar espacio al scroll indicator */
      min-height: 100vh; /* Asegurar altura completa */
    }

    section h1 {
      font-size: 3rem;
    }

    section h2 {
      font-size: 2rem;
    }

    .hero-code,
    .glass {
      margin-left: 0;
      max-width: 100%;
      margin-bottom: 2rem; /* Espacio adicional bajo el código */
    }

    .flex.gap-8 {
      justify-content: center;
      gap: 1.5rem;
    }

    .flex.gap-4 {
      justify-content: center;
    }

    /* Ajustes específicos del scroll indicator en móvil */
    #scroll-indicator-container {
      bottom: 1rem !important; /* Posición fija en móvil */
      z-index: 10;
      /* Asegurar que esté bien posicionado */
    }

    /* Ocultar elementos decorativos en móvil para simplicidad */
    #scroll-indicator-container .text-sm,
    #scroll-indicator-container svg {
      display: none;
    }

    /* Solo mostrar el indicador circular en móvil */
    #scroll-indicator-container {
      flex-direction: row;
      gap: 0;
    }
  }

  /* Ajustes adicionales para pantallas muy pequeñas */
  @media (max-width: 640px) {
    section {
      padding-bottom: 5rem;
    }

    #scroll-indicator-container {
      bottom: 0.5rem !important;
    }
  }
</style>
